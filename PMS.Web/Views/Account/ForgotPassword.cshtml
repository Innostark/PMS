@model PMS.Models.IdentityModels.ViewModels.ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot your password?";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
}


<link rel="stylesheet" href="~/Content/CSS/Pages/login.css">
<link href="~/Content/CSS/Global/componentsGlobal.css" rel="stylesheet" type="text/css" />
<link href="~/Content/CSS/Global/plugins.css" rel="stylesheet" type="text/css" />

<body class="login">
    <div class="logo">
        <a href="index.html">
            <img src="~/Content/Images/logo-big.png" alt="" />
        </a>
    </div>
    <div class="menu-toggler sidebar-toggler">
    </div>
    <div class="content">
        <section id="loginForm ">
            @using (Html.BeginForm("ForgotPassword", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "forget-form", role = "form" }))//form-horizontal
            {
                @Html.AntiForgeryToken()
                <h3 class="form-title">Forget Password ?</h3>
    <p>
        Enter your e-mail address below to have the reset password link.
    </p>
                <div>

                    <span>
                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                    </span>
                </div>


                <div class="form-group">
                    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                    <label class="control-label visible-ie8 visible-ie9">Username</label>
                    <div class="input-icon">
                        <i class="fa fa-user"></i>
                        @*<input class="form-control placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />*@
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control placeholder-no-fix", @placeholder = "Enter Email Here..." })

                    </div>
                </div>
             
                <div class="form-actions">
                  
                    <button type="submit" class="btn green pull-right">
                        Email Link <i class="m-icon-swapright m-icon-white"></i>
                    </button>
                    <br/>
                </div>
              
                @*<div class="create-account">
                        <p>
                            Don't have an account yet ?&nbsp; @Html.ActionLink("Create an account ", "Register")

                        </p>
                    </div>*@


            }
        </section>
    </div>
    <script src="~/Scripts/App/Pages/login.js" type="text/javascript"></script>
    <script>
        jQuery(document).ready(function () {
            Login.init();
        });
    </script>
</body>

