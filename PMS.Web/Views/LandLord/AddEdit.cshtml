@{
    ViewBag.Title = "Add/Edit";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="page-container">
        <div class="page-content-wrapper">
            <div class="page-content-row">
                <div class="form form-horizontal">
                    <div class="portlet-title caption">
                        <i class="font-green-haze"></i>
                        <h2><span class="caption-subject font-green-haze bold uppercase">User Add/Edit</span></h2>
                        
                    </div>
                    <div class="col-md-offset-10 col-md-2">
                        <button type="submit" class="btn green">Submit</button>
                        <button type="button" class="btn default">Cancel</button>
                    </div>
                    <h3 class="form-section">Basic Info</h3>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.CategoryId, new { @class = "control-label col-md-2" })*@
                                <label class="col-md-3 control-label-row">Name</label>
                                <input type="text" id="name" class="col-md-9 form-control" placeholder="Asad">
                                <span class="help-block">
                                    @*This is inline help*@
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-3 control-label-row">Contact Number</label>
                                <input type="text" id="contactNumber" class="col-md-9 form-control" placeholder="dd/mm/yyyy">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-3 control-label-row">Email</label>
                                <input type="text" id="email" class="col-md-9 form-control" placeholder="">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                @*@Html.LabelFor(model => model.CategoryId, new { @class = "control-label col-md-2" })*@
                                <label class="col-md-3 control-label-row">Address</label>
                                <input type="text" id="address" class="col-md-9 form-control" placeholder="">
                                <span class="help-block">
                                    @*This is inline help*@
                                </span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label class="col-md-3 control-label-row">Comments</label>
                                <textarea id="comments" class="col-md-9 form-control" placeholder=""></textarea>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
