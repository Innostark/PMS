@{
    ViewBag.Title = "Confirm Email";
    Layout = "~/Views/Shared/_BlankLayout.cshtml";
    
}

<!-- BEGIN PAGE LEVEL STYLES -->
<link href="~/Content/CSS/Pages/coming-soon.css" rel="stylesheet" type="text/css" />

<body style="background: black !important">
    <div class="container">
        <div class="row">
            <div class="col-md-12 coming-soon-header">
                <a class="brand" href="#">
                    <img src="~/Content/Images/logo-big.png" alt="logo" />
                </a>
            </div>
        </div>
        <div class="row" style="min-height: 480px;">
            <div class="col-md-6 coming-soon-content">
                <h1>Email Confirmed</h1>
                <p>
                    Thank you for confirming your email. Please @Html.ActionLink("Click here to Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })
                </p>
                <br>

            </div>

        </div>
        <!--/end row-->
        <div class="row">
            <div class="col-md-12 coming-soon-footer">
                2014 &copy; Property Management system.
            </div>
        </div>
    </div>

</body>