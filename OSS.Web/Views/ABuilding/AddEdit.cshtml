@model OSS.Web.Models.Building
@{
    ViewBag.Title = "Add/Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="page-container page-height">
        <div class="form form-horizontal">
            <div class="portlet-title caption">
                <i class="font-green-haze"></i>
                <h2><span class="caption-subject font-green-haze bold uppercase">Building Add/Edit</span></h2>
            </div>
            <div class="col-md-offset-10 col-md-2">
                <button type="submit" class=" btn green">Submit</button>
                @Html.ActionLink("Cancel", "Index", null, new { @class = "btn btn-default" })
            </div>
            <h3 class="form-section">Basic Info</h3>
            @Html.HiddenFor(model => model.BuildingId)
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Name", @id = "Name" })
                        @Html.ValidationMessageFor(model => model.Name)
                        <span class="help-block">
                        </span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.Address, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Address", @id = "Address" })
                        @Html.ValidationMessageFor(model => model.Address)
                        <span class="help-block">
                        </span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PhoneNumber, "Phone Number", new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Phone Number", @id = "Phone Number" })
                        @Html.ValidationMessageFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, "Email", new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Email", @id = "Email" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.BuiltDate, "Built Date", new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.BuiltDate, new { @class = "col-md-9 form-control datepicker mandatory", @placeholder = "mm/dd/yyyy", @id = "Built Date" })
                        @Html.ValidationMessageFor(model => model.BuiltDate)
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NoOfFloors, "No of Floors", new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.NoOfFloors, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Number Of Floors", @id = "No of Floors" })
                        @Html.ValidationMessageFor(model => model.NoOfFloors)
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.NoOfElevators, "No of Elevators", new { @class = "col-md-3 control-label-row" })
                        @Html.TextBoxFor(model => model.NoOfElevators, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Number Of Elevators", @id = "No of Elevators" })
                        @Html.ValidationMessageFor(model => model.NoOfElevators)
                        <span class="help-block">
                        </span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.Comment, "Comments", new { @class = " col-md-3 control-label-row" })
                        @Html.TextAreaFor(model => model.Comment, new { @class = "col-md-9 form-control mandatory", @placeholder = "Enter Comments", @id = "Comments" })
                        @Html.ValidationMessageFor(model => model.Comment)
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}
